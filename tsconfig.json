{
  "compilerOptions": {
    "removeComments": true,
    "module": "CommonJS",
    "target": "ES6",
    "skipLibCheck": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist/"
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
