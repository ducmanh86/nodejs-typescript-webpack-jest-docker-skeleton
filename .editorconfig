# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,tsx,js,jsx,css}]
indent_size = 2
max_line_length = 120

[*.{json,yml,xml,md,babelrc,remarkrc,prettierrc,rules}]
indent_size = 2
